<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/alarm_elem"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/alarmHeight"
    android:layout_marginTop="@dimen/fromScreen"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/roundedview_dark">

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/fromScreen"
        android:layout_marginLeft="@dimen/fromScreen"
        android:layout_marginTop="@dimen/fromFrameAlarm"
        android:text="18:00"
        android:textSize="@dimen/timeSize"
        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="@id/alarm_elem"
        app:layout_constraintTop_toTopOf="@+id/alarm_elem" />

    <Switch
        android:id="@+id/switch_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/fromFrameSwitch"
        android:layout_marginEnd="@dimen/fromScreen"
        android:layout_marginRight="@dimen/fromScreen"
        app:layout_constraintEnd_toEndOf="@id/alarm_elem"
        app:layout_constraintTop_toTopOf="@+id/alarm_elem"
        tools:ignore="UseSwitchCompatOrMaterialXml" />

</androidx.constraintlayout.widget.ConstraintLayout>